<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"

        android:layout_width="148dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginBottom="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_eee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:padding="40dp"
                android:text="@string/txt_eee"
                android:textColor="@color/colorText"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn_cse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:padding="40dp"
                android:text="@string/txt_cse"
                android:textColor="@color/colorText"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:padding="40dp"
                android:text="@string/txt_me"
                android:textColor="@color/colorText"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn_rateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:padding="40dp"
                android:text="@string/txt_rate_us"
                android:textColor="@color/colorText"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btn_shareApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:padding="40dp"
                android:text="@string/txt_shareApp"
                android:textColor="@color/colorText"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>